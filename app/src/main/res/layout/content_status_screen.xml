<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_status_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="chocho_ololoev.gamc.Status_screen">

    <TextView
        android:text="@string/status_screen_header"
        style="@style/statusHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_label_header"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_label_header"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                style="@style/TextInRows"
                android:text="@string/status_screen_temp"
                android:id="@+id/status_label_temp" />
            <TextView
                style="@style/ValsInRows"
                android:text="23"
                android:id="@+id/status_val_temp" />
            <TextView
                style="@style/ValsInRows"
                android:text="@string/grad"
                android:gravity="left"
                android:id="@+id/status_measurment_grad" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                style="@style/TextInRows"
                android:text="@string/status_screen_humidity"
                android:id="@+id/status_label_humidity" />
            <TextView
                style="@style/ValsInRows"
                android:text="55"
                android:id="@+id/status_val_humidity" />
            <TextView
                style="@style/ValsInRows"
                android:text="%"
                android:gravity="left"
                android:id="@+id/status_measurment_percent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                style="@style/TextInRows"
                android:text="@string/status_screen_lux"
                android:id="@+id/status_label_lux" />
            <TextView
                style="@style/ValsInRows"
                android:text="34000"
                android:id="@+id/status_val_lux" />
            <TextView
                style="@style/ValsInRows"
                android:text="@string/lux"
                android:gravity="left"
                android:id="@+id/status_measurment_lux" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                style="@style/TextInRows"
                android:text="@string/status_screen_water"
                android:id="@+id/status_label_water" />
            <TextView
                style="@style/ValsInRows"
                android:text="1/3"
                android:id="@+id/status_val_water" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                style="@style/TextInRows"
                android:text="@string/status_screen_day"
                android:id="@+id/status_label_day" />
            <TextView
                style="@style/ValsInRows"
                android:text="44/60"
                android:id="@+id/status_val_day" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                style="@style/TextInRows"
                android:text="@string/status_screen_date"
                android:id="@+id/status_label_date" />
            <TextView
                style="@style/ValsInRows"
                android:text="26 октября 2016"
                android:id="@+id/status_val_date" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                style="@style/TextInRows"
                android:text="@string/status_screen_time"
                android:id="@+id/status_label_time" />
            <TextView
                style="@style/ValsInRows"
                android:text="16:53"
                android:id="@+id/status_val_time" />

        </TableRow>

    </TableLayout>

    <Button
        android:text="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
